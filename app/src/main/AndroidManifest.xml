<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ggcartoon.yztc.com.ggcartoon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="ggcartoon.yztc.com.APP.ImageLoaderApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:windowSoftInputMode="adjustPan"软键盘不能自动弹出 -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ManHuaXiangQingActivity"
            android:theme="@style/otherPageStyle" />
        <!-- 设置评论activity的主题为透明 -->
        <activity
            android:name=".PingLunListActivity"
            android:theme="@style/otherPageStyle" />
        <activity
            android:name=".ManHuaActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".SelectActivity"
            android:theme="@style/otherPageStyle" />
        <activity
            android:name=".TypeActivity"
            android:theme="@style/otherPageStyle" />
        <activity
            android:name=".ToolActivity"
            android:theme="@style/otherPageStyle" />
        <activity android:name=".LoginAcitivyt"
            android:theme="@style/otherPageStyle"
            />
    </application>

</manifest>